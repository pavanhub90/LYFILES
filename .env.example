# ─── App ───────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_SECRET=generate-with-openssl-rand-base64-32

# ─── Database (PostgreSQL) ──────────────────────
# Local: postgresql://postgres:password@localhost:5432/lyfiles
# Supabase / Neon / Railway: paste connection string here
DATABASE_URL=postgresql://user:password@localhost:5432/lyfiles

# ─── Redis (BullMQ job queue) ───────────────────
# Local: redis://localhost:6379
# Upstash: rediss://default:token@host:6379
REDIS_URL=redis://localhost:6379

# ─── Auth (NextAuth.js v5) ──────────────────────
# Generate: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ─── Google OAuth ───────────────────────────────
# Get from: console.cloud.google.com → APIs → Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ─── GitHub OAuth ───────────────────────────────
# Get from: github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ─── AWS S3 (or Cloudflare R2) ──────────────────
S3_REGION=us-east-1
S3_BUCKET_NAME=lyfiles-storage
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
# Only for Cloudflare R2 — leave empty for standard S3:
S3_ENDPOINT=

# ─── Email (Resend) ──────────────────────────────
# Get API key from: resend.com/api-keys
RESEND_API_KEY=re_your_key_here
EMAIL_FROM=LyFiles <noreply@lyfiles.com>

# ─── Optional: Stripe Payments ──────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
